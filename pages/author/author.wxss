/* pages/author/author.wxss */
#author{
  position: relative;
}
.share{
  position: fixed;
  top: 25rpx;
  right: 0;
  min-width: 138rpx;
  height: 55rpx;
  line-height: 55rpx;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
  border-top-left-radius: 28rpx;
  border-bottom-left-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share image{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
}
.share span{
  font-size: 28rpx;
  color: #fff;
  margin-left: 10rpx;
}
.author-top{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 4rpx solid #f2f2f2;
  border-bottom: 4rpx solid #f2f2f2;
  padding-top: 47rpx;
  padding-bottom: 30rpx;
}
.author-top image{
  display: block;
  min-width: 150rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
}
.author-name{
  color: #333;
  font-size: 30rpx;
  margin: 26rpx 0 23rpx 0;
}
.video-number{
  color: #999;
  font-size: 22rpx;
  display: flex;
}
.video-number span{
  color: #05BBBA;
}
.video-number p:nth-child(2){
  color: #999;
  margin: 0 12rpx;
  font-size: 36rpx;
  line-height: 15rpx;
}
.author-product{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 12rpx;
  border-bottom: 4rpx solid #f2f2f2;
}
.author-product:last-child{
  border-bottom: none;
}
.pro-left{
  display: flex;
}
.pro-left image{
  display: block;
  width: 320rpx;
  height: 206rpx;
}
.pro-center{
  margin-left: 25rpx;
}
.pro-center view:nth-child(1){
  font-size: 28rpx;
  color: #000;
  width: 236rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.imgName{
  width: 236rpx;
  display: flex;
  align-items: center;
  margin: 19rpx 0 47rpx 0;
}
.imgName image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.imgName span{
  color: #333;
  font-size:22rpx;
  margin-left: 14rpx;
}
.lookUser-number image{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
}
.lookUser-number span{
  color: #999;
  font-size: 22rpx;
  margin-left: 14rpx;
}
.pro-right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-right: 15rpx;
}
.pro-right image{
  display: inline-block;
  width: 29rpx;
  height: 33rpx;
}
.pro-right view:nth-child(2){
  color: #999;
  font-size: 20rpx;
  margin-top: 37rpx;
}
