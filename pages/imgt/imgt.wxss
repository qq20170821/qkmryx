/* pages/imgt/imgt.wxss */
swiper{
  width: 100%;
  height: 450rpx;
  margin-bottom: 20rpx;
  position: relative;
}
image.slide-image{
  display: block;
  width: 100%;
  height: 100%;
}
.swiper_title{
  position: absolute;
  bottom: 70rpx;
  width: 100%;
  background:rgba(0, 0, 0, 0.7);
  color:#fff;
  font-size:38rpx;
  font-weight:bold;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  letter-spacing: 1rpx;
  padding: 10rpx 10rpx 0 10rpx;
  box-sizing: border-box;
}
.test{
  position: absolute;
  bottom: 0;
  height: 70rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}
.imgt{
  position: relative;
}
image.change{
  display: block;
  width: 113rpx;
  height: 104rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
}
.tip{
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  z-index: 1;
  background-color: #03C5AB;
  font-size: 30rpx;
  color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-radius: 35rpx;
  font-weight: bold;
}
.tip image{
  display: block;
  width: 44rpx;
  height: 14rpx;
  margin: 0 14rpx;
}
.box{
  padding:0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.box-main{
  position: relative;
  width: 100%;
  height: 420rpx;
  border-radius: 28rpx;
}
.box image{
  display: block;
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 28rpx;
}
.title{
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size:38rpx;
  font-weight: bold;
  border-bottom-left-radius: 28rpx;
  border-bottom-right-radius: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  letter-spacing: 1rpx;
}

.noMore{
  width: 100%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 22rpx;
}