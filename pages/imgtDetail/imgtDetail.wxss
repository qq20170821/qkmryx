#imgtDetail{
  position: relative;
}
.mess image{
  display: blcok;
  width: 399rpx;
  height: 193rpx;
}
.mess{
  text-align: center;
  position: fixed;
  left: 50%;
  bottom: 90rpx;
  transform:translateX(-50%);
  color: #fff;
  font-size: 40rpx;
  z-index: 1;
}
.view-text{
  position: fixed;
  width: 100%;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-70%);
}
/* 底部分享按钮 */
button.share{
  width:60%;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  border:none;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
  font-size: 32rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 28rpx;
  position: fixed;
  bottom: 25rpx;
  left: 50%;
  transform:translateX(-50%); 
  z-index: 1;
}
.share image{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
}
.share span{
  margin-left: 10rpx;
}
.imgtTop{
  padding: 51rpx 0 32rpx 0;
  box-sizing: border-box;
}
.imgtTop-title{
  font-size: 48rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 18rpx 20rpx 18rpx;
}
.author-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 12rpx;
  box-sizing: border-box;
}
.author-info image{
  display: block;
}
.author-info-left,.author-info-right{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.author-info-left-l,.author-info-left-r{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.author-info-left-r{
  margin-left: 64rpx;
}
.author-info-left-l image{
  min-width: 40rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.author-info-left-l span{
  color: #333;
  font-size: 30rpx;
  margin-left: 14rpx;
}
.author-info-left-r image{
  min-width: 20rpx;
  width: 20rpx;
  height: 20rpx;
}
.author-info-left-r span{
  color: #999;
  font-size: 30rpx;
  margin-left: 14rpx;
}
.author-info-right button{
  border: none;
  color: #fff;
  min-width: 147rpx;
  height: 62rpx;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
  display: flex;
  align-items: center;
}
.author-info-right button image{
  width: 32rpx;
  height: 32rpx;
}
.author-info-right button span{
  font-size: 32rpx;
  margin-left: 10rpx;
}
.fixed{
  width: 100%;
  position: fixed;
  top: 0;
  background:#FFF5C8;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}
.fixed-left{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fixed image{
  display: block;
}
image.add{
  width: 27rpx;
  height: 50rpx;
  margin-left: 10rpx;
}
image.dian_red{
  width: 44rpx;
  height: 14rpx;
  margin:0 10rpx;
}
.fixed-right image{
  width: 26rpx;
  height: 26rpx;
}
/* 富文本部分样式 */
.rich{
  width: 100%;
  padding: 0 14rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.rich table{
  width: 100%;
}
/* 固定分享按钮 */
.fixedShare{
  border:none;
  height: 62rpx;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
  border-radius:31px;
  top: 0;
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 1;
}
.fixedShare image{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
}
.fixedShare span{
  display: block;
  flex: 1;
}

/* 图文列表样式 */
.left-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 12rpx 20rpx 12rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  border-top: 8rpx solid #f2f2f2;
  font-weight: bold;
}
.left-title-l{
  display: flex;
  align-items: center;
}
.left-title-l span:nth-child(1){
  display: block;
  width: 5rpx;
  height: 40rpx;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
}
.left-title-l span:nth-child(2){
  margin-left: 16rpx;
}
.left-title-r{
  display: flex;
  align-items: center;
}
.left-title-r image{
  display: block;
  width: 38rpx;
  height: 38rpx;
}
.left-title-r span{
  margin-left: 22rpx;
}

.box{
  padding: 0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.box-main{
  position: relative;
  width: 100%;
  height: 420rpx;
}
.box image{
  display: block;
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 28rpx;
}
.title{
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size:38rpx;
  font-weight: bold;
  border-bottom-left-radius: 28rpx;
  border-bottom-right-radius: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  letter-spacing: 1rpx;
}
.copyWrite{
  margin-bottom: 100rpx;
}
/* 点赞评论 */
.startComment{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
  color: #333;
  font-size: 36rpx;
}
.startComment image{
  display: block;
  width: 38rpx;
  height: 38rpx;
}
.start,.comment{
  display: flex;
  align-items: center;
}
.hr{
  width: 4rpx;
  height: 42rpx;
  background-color: #ccc;
}
.startComment span{
  margin-left: 20rpx;
}
/* 全屏遮罩 */
.zz{
  position: fixed;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}
/* 弹出评论 */
.close{
  position: fixed;
  right: 0rpx;
  top: 0rpx;
  width: 60rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 100%;
  color: #fff;
  background: rgba(3,197,171,1);
  font-size: 30rpx;
}
.reply{
  width: 90%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  padding: 76rpx 26rpx 61rpx 26rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  z-index: 2;
}
.row1{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 48rpx;
  color: #333;
}
.reply_main textarea{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  background-color: #F7F6F6;
  margin: 31rpx 0 56rpx 0;
  font-size: 30rpx;
  color: #999;
  padding-top: 30rpx;
  padding-left: 36rpx;
  box-sizing: border-box;
  position: relative;
}
.currentWordNumber{
  position: absolute;
  bottom: 0;
  right: 0;
  color: #000;
  padding-right: 10rpx;
  box-sizing: border-box;
}
.row2 button{
  height:100rpx;
  background:rgba(3,197,171,1);
  border-radius:10px;
  color: #fff;
}
.row3{
  color: #999;
  font-size: 36rpx;
  text-align: center;
  margin-top: 40rpx;
}

/* 按钮去边框 */
button::after{ border: none; }
.ddd_share button{
  width: auto;
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: none;
  margin: 0 40rpx;
}
.ddd_share image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.ddd{
  width: 100%;
  height: 170rpx;
  margin-top: 40rpx;
}
.loading image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
/* 无脑转发弹窗 */
.nofaceZz{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  bottom: 0;
}
.nofaceShare{
  width: 500rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 101;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 16rpx;
}
.nofaceShare_title{
  color: #333;
  font-size: 36rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.nofaceShare button{
  display: block;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  margin: 0 auto;
  background:linear-gradient(146deg,rgba(3,197,171,1),rgba(3,197,171,1),rgba(7,172,206,1));
  text-align: center;
  color: #fff;
  padding: 0;
  margin-top: 20rpx;
  font-size: 36rpx;
}