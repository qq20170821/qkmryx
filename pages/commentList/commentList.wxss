  color: #333;
  font-size: 36rpx;
}
.comment{
  width: 726rpx;
  margin: 0px auto
}
.single_ul{
  list-style: none;
}
.single_ul li{
  display: flex;
  padding: 10rpx 0rpx;
}
.img_box{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;

}
.head_img{
  max-width: 100%;
  max-height: 100%
}
.message_box{
  max-width: 515rpx;
  padding-left:27rpx;
}
.message_box text{
  word-wrap:break-word;
}
.title{
  padding: 18rpx 0rpx;
