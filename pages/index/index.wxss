/**index.wxss**/
.video{
  position: relative;
  background-color: #000;
}
.video_bg{
  width: 100%;
  height: 420rpx;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  opacity: 0.7;
}
.video_title{
  position: absolute;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.3);
}
.video_play_icon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 100%;
}
.video_play_icon image{
  width: 38rpx;
  height: 42rpx;
}
.video_info{
  position: absolute;
  bottom: 14rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 22rpx;
}
.video_playNum{
  display: flex;
  align-items: center;
}
.video_playNum image:nth-child(1){
  width: 20rpx;
  height: 20rpx;
}
.video_playNum .hotImg{
  width: 18rpx;
  height: 22rpx;
}
.video_playNum span{
  margin:0 8rpx 0 11rpx;
}
.author_info{
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
}
.author_info image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.author_info span{
  margin-left: 14rpx;
  font-size: 28rpx;
  color: #333;
}